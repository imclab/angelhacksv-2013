{
  "name": "Automatic Scroller",
  "version": "2.0",
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Scroll page to track user eyes"
  },
  "web_accessible_resources" : [
     "red_dot.html",
     "red_dot.css"
     ],
  "manifest_version": 2
}
